#!/usr/bin/env php
<?php

if (is_file(__DIR__ . '/../vendor/autoload.php')) {
    require __DIR__ . '/../vendor/autoload.php';
} else if (is_file(__DIR__ . '/../../../autoload.php')) {
    require __DIR__ . '/../../../autoload.php';
} else {
    echo 'Composer environment not set up correctly' . PHP_EOL;
    echo 'See https://getcomposer.org for more information.' . PHP_EOL;
    exit(1);
}

if (isset($argv[1])) {
    if ($argv[1] == 'install') {
        BrainMaestro\GitHooks\HookManager::install();
    } else if ($argv[1] == 'uninstall') {
        BrainMaestro\GitHooks\HookManager::uninstall();
    }
}
